<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:v="clr-namespace:TwiHigh.Views"
            x:Class="TwiHigh.Views.MainPage"
            Title="{Binding Title}">

    <!--iOS Unique Pading-->
    <TabbedPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS">0,20,0,0</On>
        </OnPlatform>
    </TabbedPage.Padding>

    <v:HomeTLPage/>
    <v:TweetPage />
    <v:SearchPage />
    <v:UserTLPage />
</TabbedPage>
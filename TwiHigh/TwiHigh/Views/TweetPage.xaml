<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TwiHigh.Views.TweetPage"
             Title="{Binding Title}">

    <StackLayout VerticalOptions="Fill">
        <Label Text="Post" />
        <Editor x:Name="Post" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="30" Text="{Binding Post}" TextChanged="Post_TextChanged" />
        <Label Text="FixedTag" />
        <Editor x:Name="FixedTag" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="30" Text="{Binding FixedTag}" TextChanged="FixedTag_TextChanged" />
        <Label x:Name="TotalWordCount" />
        <Button Text="Tweet" WidthRequest="80" Command="{Binding PostTweetCommandAsync}" />
    </StackLayout>

</ContentPage>